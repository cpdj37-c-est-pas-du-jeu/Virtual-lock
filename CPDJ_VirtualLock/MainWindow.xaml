<Window x:Class="CPDJ_VirtualLock.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CPDJ_VirtualLock"
        mc:Ignorable="d"
        Title="CPDJ : Virtual lock"
        Height="450" Width="800">
    <Grid Background="DarkSlateGray">
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <TextBlock
            Grid.Row="0" Name="ui_countdown"
            Text="[^.^]" FontSize="150"
            VerticalAlignment="Center" HorizontalAlignment="Center"
            />
        <Button
            Grid.Row="1" Name="ui_start_button"
            Content="Start" FontSize="20"
            Margin="20,20,20,20"
            HorizontalAlignment="Center"
            Click="ui_start_button_clicked"
            />
    </Grid>
</Window>
